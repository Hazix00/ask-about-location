{
    "settings": {
        "number_of_shards": 1,
        "number_of_replicas": 1,
        "analysis": {
            "normalizer": {
                "my_normalizer": {
                    "type": "custom",
                    "filter": ["lowercase"]
                }
            }
        }
	},
    "mappings": {
        "properties": {
            "coordinate": {
                "type": "geo_point"
            },
            "id": {
                "type": "keyword"
            },
            "name": {
                "type": "text",
                "fields": {
                    "normalize": {
                        "type": "keyword",
                        "normalizer": "my_normalizer"
                    },
                    "keyword" : {
                        "type": "keyword"
                    }
                }
            }
        }
    }
}